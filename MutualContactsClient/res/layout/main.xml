<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="#FFFBAE">

	<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:layout_centerVertical="true" android:text="INTRA DEPARTMENT NOTIFIER"
		tools:context=".MainActivity" />

	<Button android:id="@+id/btnexplore" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_marginBottom="77dp"
		android:background="#79A12F" android:onClick="Accept" android:padding="12dip"
		android:text="Accept and Continue" android:textColor="#ffffffff" />

</RelativeLayout>
